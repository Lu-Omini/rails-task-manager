<h1>All Tasks</h1>
<ul>
  <% @tasks.each do |task| %>

    <li><%= link_to task.title.capitalize, task_path(task["id"].to_i) %> </li>

    <%= link_to 'Delete this task', task_delete_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<br>

  <% end %>
</ul>
<br>

<button><%= link_to 'Create new task', new_path %></button>

